{
  "name": "@maxxborer/sheets-to-i18n",
  "version": "0.0.0",
  "description": "🌐 Generates translations from your Google Sheets 📑",
  "keywords": [
    "i18n",
    "localization",
    "google-sheets",
    "translations",
    "internationalization",
    "cli"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "sheets-to-i18n": "dist/cli.js"
  },
  "scripts": {
    "dev": "npm run build:watch",
    "build": "tsup",
    "build:watch": "tsup --watch",
    "prepare": "npm run build",
    "update": "node dist/cli.js update",
    "lint": "npm run lint:check",
    "lint:check": "run-p format:check lint:eslint:check lint:types",
    "lint:fix": "npm run format:fix && npm run lint:eslint:fix",
    "lint:types": "tsc --noEmit --pretty false",
    "lint:eslint:base": "eslint --cache --cache-strategy content --cache-location node_modules/.cache/eslint --ext .ts",
    "lint:eslint:check": "npm run lint:eslint:base -- . --max-warnings=0",
    "lint:eslint:fix": "npm run lint:eslint:base -- . --fix",
    "format": "npm run format:fix",
    "format:base": "prettier --log-level warn --cache --cache-strategy content --cache-location node_modules/.cache/prettier/.prettiercache --ignore-unknown --no-error-on-unmatched-pattern .",
    "format:check": "npm run format:base -- --check",
    "format:fix": "npm run format:base -- --write",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "verify": "run-p lint:check test build",
    "verify:ci": "npm run clean && npm ci && npm run verify",
    "clean": "rm -rf dist node_modules/.cache",
    "release": "semantic-release"
  },
  "private": false,
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=22"
  },
  "devDependencies": {
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/commit-analyzer": "13.0.1",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "11.0.6",
    "@semantic-release/npm": "12.0.2",
    "@semantic-release/release-notes-generator": "14.1.0",
    "@types/node": "22.18.6",
    "@typescript-eslint/eslint-plugin": "8.44.1",
    "@typescript-eslint/parser": "8.44.1",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "9.36.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-only-error": "1.0.2",
    "eslint-plugin-security": "3.0.1",
    "eslint-plugin-sonarjs": "3.0.5",
    "eslint-plugin-unused-imports": "4.2.0",
    "npm-run-all2": "8.0.4",
    "prettier": "^3.6.2",
    "prettier-plugin-jsdoc": "1.3.3",
    "prettier-plugin-organize-imports": "^4.3.0",
    "semantic-release": "24.2.9",
    "tsup": "8.5.0",
    "typescript": "^5.9.2",
    "vitest": "3.2.4"
  },
  "dependencies": {
    "dotenv": "17.2.2",
    "google-auth-library": "10.3.0",
    "zod": "^4.1.11"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maxxborer/sheets-to-i18n.git"
  },
  "author": "maxxborer",
  "funding": "https://github.com/sponsors/maxxborer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/maxxborer/sheets-to-i18n/issues"
  },
  "homepage": "https://github.com/maxxborer/sheets-to-i18n#readme"
}
